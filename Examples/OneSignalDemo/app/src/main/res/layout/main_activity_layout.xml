                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorDarkText"/>

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

