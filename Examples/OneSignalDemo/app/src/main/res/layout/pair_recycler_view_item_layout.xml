<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pair_recycler_view_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/ripple_selector_red_white">

        <TextView
            android:id="@+id/pair_recycler_view_item_key_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:textSize="16sp"
            android:textColor="@color/colorDarkText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pair_recycler_view_item_value_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:layout_toEndOf="@id/pair_recycler_view_item_key_text_view"
            android:layout_toRightOf="@id/pair_recycler_view_item_key_text_view"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="@color/colorDarkText" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

</LinearLayout>